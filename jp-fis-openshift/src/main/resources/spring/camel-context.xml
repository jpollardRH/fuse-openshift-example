<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean class="org.mycompany.USName" id="usNameBean"/>
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <endpoint id="jsonToJava" uri="dozer:jsonToJava?sourceModel=us_name.Usname&amp;targetModel=org.mycompany.USName&amp;unmarshalId=us_nameUsname&amp;mappingFile=transformation.xml"/>
        <dataFormats>
            <json id="us_nameUsname" library="Jackson" unmarshalTypeName="us_name.Usname"/>
        </dataFormats>
        <route id="simple-route">
            <!--             <to id="_to2" uri="file:/tmp?fileName=output.txt"/> -->
            <!--             <log id="_log3" message="After file produced >>>"/> -->
            <!--             <to id="getToday" uri="https4://api.abalin.net/get/today?country=us"/> -->
            <from id="route-timer" uri="timer://foo?period=5s&amp;repeatCount=1"/>
            <log id="_log1" message="After timer >>> ${body}"/>
            <setBody id="route-setBody">
                <simple>Hello World from camel-context.xml - Thurs 12 July 2018 14:04</simple>
            </setBody>
            <log id="_log2" message="After set body >>> ${body}"/>
            <to id="_to2" uri="restlet:https://api.abalin.net:443/get/today"/>
            <log id="_log3" message="After REST call >>> ${body}"/>
            <to id="_to3" uri="ref:jsonToJava"/>
            <log id="_log4" message="After jsonToJava >>> ${body.getFullCSVFormat()}"/>
            <bean id="_bean1" method="getFullCSVFormat(${body})" ref="usNameBean"/>
            <log id="_log5" message="After getFullCSVFormat >>> ${body}"/>
            <to id="_to1" uri="ftp:ftp.dlptest.com:21/directoryName?fileName=output.txt&amp;passiveMode=true&amp;password=3D6XZV9MKdhM5fF&amp;username=dlpuser@dlptest.com"/>
            <log id="route-log" message="After FTP >>> ${body}"/>
        </route>
    </camelContext>
</beans>
